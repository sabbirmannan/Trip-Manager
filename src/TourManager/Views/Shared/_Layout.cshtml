<!DOCTYPE html>
<html>
<head>
    <title>Tour Manager - @ViewBag.Title</title>
    <meta charset="utf-8"/>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/Abdullah.jpg" alt="headshot" class="headshot" />
        <span id="username">Abdullah Ibn Mannan</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle" class="btn btn-primary btn-sm">Toggle Menu</button>
            </div>
            @RenderBody()
        </div>
        <div id="footer">
            <p class="text-primary">&copy; 2016 Tour Manager Inc.</p>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("scripts", false);

</body>
</html>
